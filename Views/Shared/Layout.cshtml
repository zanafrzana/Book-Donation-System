<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Book Donors</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="path-to-your-custom.css">
    <style>
        body {
            background-color: #f9f3fc;
            font-family: 'Roboto', sans-serif;
        }

        header {
            background-color: #7b6d8d;
            color: white;
            padding: 10px 0;
        }

        .header-title {
            text-align: center;
            margin: 0;
            font-size: 2.5rem;
            font-weight: bold;
        }

        .header-subtitle {
            text-align: center;
            font-size: 1.2rem;
            font-style: italic;
        }

        nav.navbar {
            font-family: 'Roboto', sans-serif; /* Apply new font to the navbar */
            font-size: 16px; /* Adjust size for better readability */
            background-color: #f8f9fa; /* Light background */
        }

            nav.navbar .nav-link {
                color: #333; /* Neutral text color */
                margin: 0 10px; /* Add spacing between links */
                text-decoration: none; /* Remove underline */
            }

                nav.navbar .nav-link:hover {
                    color: #007BFF; /* Highlight color on hover */
                }

        .btn-custom {
            padding: 10px 20px;
            font-size: 1.1rem;
            margin: 10px;
            border-radius: 8px;
        }

        .btn-donate {
            background-color: #5b73af;
            color: white;
        }

            .btn-donate:hover {
                background-color: #3f578d;
            }

        .btn-explore {
            background-color: #61a5a5;
            color: white;
        }

            .btn-explore:hover {
                background-color: #4a8282;
            }

        .btn-become {
            background-color: #a5645c;
            color: white;
        }

            .btn-become:hover {
                background-color: #874846;
            }

        footer {
            background-color: #7b6d8d;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <header>
        <h1 class="header-title">Welcome to Book Donors!</h1>
        <p class="header-subtitle">Make the world brighter, one book at a time. 📚 💜</p>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Book Donors</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Books/Create">Donate a Book</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Books">Explore Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Donors/Create">Become a Donor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="AboutUs" asp-action="Index">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="FAQ" asp-action="Index">FAQ</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container mt-5">
        @RenderBody()
    </main>
    <footer>
        &copy; @DateTime.Now.Year Book Donors | Connecting Readers, One Book at a Time
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
