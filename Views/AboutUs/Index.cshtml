@{
    ViewData["Title"] = "About Us";
}

<!-- Add Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700&display=swap" rel="stylesheet">

<div class="container mt-5">
    <!-- About Us Section -->
    <div class="about-us-section py-5" style="background-color: #F9F5FF; padding-top: 40px; padding-bottom: 40px; border-radius: 8px;">
        <h2 style="font-family: 'Merriweather', serif; color: #4A3F72; text-align: center; font-size: 2rem;">About Us</h2>
        <hr class="my-4" style="border: 1px solid #4A3F72; width: 20%; margin: auto;">
        <p style="font-family: 'Merriweather', serif; color: #555; font-size: 1.2rem; line-height: 1.6; text-align: center;">
            Welcome to Book Donors! Our mission is to connect donors and readers, spreading knowledge and stories <strong>one book at a time</strong>.
        </p>
        <p style="font-family: 'Merriweather', serif; color: #555; font-size: 1.2rem; line-height: 1.6; text-align: center;">
            Founded in <strong>2023</strong>, we aim to build a platform where books find new homes and readers find joy.
        </p>
        <p style="font-family: 'Merriweather', serif; color: #555; font-size: 1.2rem; line-height: 1.6; text-align: center;">
            Join us in making the world a better place, <strong>one book at a time.</strong>
        </p>
    </div>
</div>

<style>
    /* Hover effect for section text */
    .about-us-section p {
        transition: color 0.3s ease;
    }

        .about-us-section p:hover {
            color: #6A0DAD; /* Subtle color change for paragraph text on hover */
        }
</style>
